<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav" style="float:right;visibility:visible" id="login_container" >
                    <li style="margin-top:10px">
                        <span style="font-size:20px;color:white" id="loginName">
                        </span>
                    </li>
                    <li style="margin-top:10px">
                        <span>&nbsp;&nbsp;</span>
                    </li>
                    <li style="margin-top:10px">
                        <button type="button" class="btn btn-primary" id="logout">
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                        </button>
                    </li>
                </ul>
                <div id="logout_confirm_dialog" title="Confirmation Required">
                    Are you sure about this?
                </div>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year 银极资产管理有限公司</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

